
<div class="grid_8" style = "border: 3px solid #DEF2FA; width: 545px; height: 307px; text-align: left; overflow: hidden;">
<script type="text/javascript" src="swfobject.js"></script>
<div id="player">This text will be replaced</div>
<script type="text/javascript">
var so = new SWFObject('/player.swf','mpl','545','306','9');
so.addParam('allowscriptaccess','always');
so.addParam('allowfullscreen','true');
so.addParam('wmode','transparent');
so.addVariable('image','<%= @video.video.url(:thumb) %>');
so.addVariable('file', '<%= @video.video.url.gsub(/\?.*/,'') %>&skin=/bekle.swf&frontcolor=CCFFFF&controlbar=over&autostart=true&icons=false');
so.addVariable("width","545");
so.addVariable("frontcolor","0xFFFFFF");
so.addVariable("height","306");
so.addVariable('overstretch', 'true')
so.write('player');
</script>
</div>


