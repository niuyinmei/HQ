<div id = "viewer" class = "grid7" style ="margin-left: 0px;">
<div id="map" style="width: 545px; height: 307px;border: 1px solid ;margin-left:404px; ">
</div></div>
<script src="http://maps.google.com/maps?file=api&amp;v=2&amp;key=ABQIAAAA8Q_cmxJTww3DTwFXB4PwiBQdO_nkjCE0BKBAIWpoYyHNGMKBfRQUn4iJ4Pi_nHCqnp2jaC_LjQLu1g",  type="text/javascript">
</script>
<script type="text/javascript">
    var geocoder = new GClientGeocoder();
    var centerLatitude = 46.92026;
    var centerLongitude = -95.09766;
    var lat = <%= @lat.to_json %> ;
    var lng = <%= @lng.to_json %> ;
    var point = new GLatLng(lat,lng);
    var startZoom = 2;
    var map;
    
    function init() 
    {
     if (GBrowserIsCompatible()) 
      {
       map = new GMap2(document.getElementById("map"));
       map.addControl(new GSmallMapControl());
       map.setCenter(new GLatLng(centerLatitude, centerLongitude), startZoom);
       map.addOverlay(new GMarker(point));
      }
    }
    window.onload = init;
    window.onunload = GUnload;
</script>

