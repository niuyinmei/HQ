            %li[tab]
              = link_to_remote tab.title,:url=>{:controller=>'haml',:action=>'find_templates',:id =>@org.id,:tab_id => tab.id},:update=>'admin_left'
              .blueArrow
                %img.manage_btn{ :src => "/images/blueArrow.jpg", :alt => "Options", :style => "cursor:pointer;", :width => "25" }
              .manageNav
                .grid_2#deleimg
                  %img.moveLeft{ :src => "/images/leftArrow.jpg", :height => "25" }
                  %img.moveRight{ :src => "/images/rightArrow.jpg", :height => "25" }
                  = link_to image_tag("/images/removeBtnBlue.jpg", :height => "25",:style => "margin-bottom:-9px;"),:controller => :haml,:action => :delete_tab,:id => @org.id,:tab_id => tab.id
                  %br
                  move &nbsp;&nbsp;&nbsp; delete
          
