  .navbar
    .grid_9
      %ul#nav
        .selected
          %li
            %a{ :href => "#" }
              Profile
        %li#userReviews
         
          = link_to 'User Reviews',:controller => :haml,:action => :admin_userReviews,:id => @org.id
