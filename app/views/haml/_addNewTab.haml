!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %title
      Local Search Made Wonderful
    %link{ :href => "/stylesheets/stylesheet.css", :rel => "stylesheet", :media => "all", :type => "text/css" }
    %link{ :href => "/stylesheets/960/reset.css", :rel => "stylesheet", :media => "all", :type => "text/css" }
    %link{ :href => "/stylesheets/960/960.css", :rel => "stylesheet", :media => "all", :type => "text/css" }
    %link{ :href => "/stylesheets/960/text.css", :rel => "stylesheet" , :media => "all", :type => "text/css"}
    %script{ :src => "/javascripts/dw_addNewTab.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/dw_event.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/dw_scroll.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/html_att_ev.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/mouseOverOut.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/addTab.js", :type => "text/javascript" }
    %script{:src => "/javascripts/prototype.js", :type => "text/javascript"}

  %body{ :onload => "init_dw_Scroll()" }
    .container_12
      .grid_7#viewer{ :style => "margin-left: 0px;"}
        .grid_5
          %span{ :style => "font-size: 45px; color: #1B75BC; float: left;"}
            1
          %h2{ :style => "margin: 26px; padding-left: 10px;"}
            Choose your template:
        .grid_1{ :style => "text-align: right; float: right;"}
          = link_to image_tag("/images/exitBtn.jpg", :height => "35"),:controller => :haml,:action => :close,:id =>@org.id
        %br
        %br
        %br
      
        .grid_7{ :style => "margin: 0px;"}
          #addNewTabWindow
            #searchContent{ :style => "width: 960px; height: 180px;"}
              .grid_4
                = link_to_remote image_tag("/images/templateBulletedList.jpg",:name => "bulletedList",:onmouseover => "buttondown('bulletedList')", :onmouseout => "buttonup('bulletedList')"), :update => 'viewer',:url => {:controller => :haml,:action => :addNewTab2,:id => @org.id,:tab_type => "bullet"}
              .grid_4
                = link_to_remote image_tag("/images/templateFlowingText.jpg",:name => "flowingText",:onmouseover => "buttondown('flowingText')", :onmouseout => "buttonup('flowingText')"), :update => 'viewer',:url => {:controller => :haml,:action => :addNewTab2,:id => @org.id,:tab_type => "flowing"}
              .grid_4
                = link_to_remote image_tag("/images/templatePriceDescription.jpg",:name => "priceDescription",:onmouseover => "buttondown('priceDescription')", :onmouseout => "buttonup('priceDescription')"), :update => 'viewer',:url => {:controller => :haml,:action => :addNewTab2,:id => @org.id,:tab_type => "price"}
        
        = render :partial => 'motion_scroll_bar_horizontal'  
