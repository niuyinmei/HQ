    %script{ :type => "text/javascript", :src => "/javascripts/jquery.corner.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/jquery.corners.inner_outer.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/viewer_prompt.js"}
    
  %body{ :onload => "init_dw_Scroll()" }
    .container_12
  
      / BOF HEADER
        
      .superHeader
        = render :partial => 'login'
      .clear

      .logoHeader
        %img{ :src => "/images/hqLogo.jpg", :height => "200" }

      .search
        %form{ :action => "#"}
          %input{ :class => "text", :type => "text", :onclick =>"this.value=''", :value => "Local Search Made Wonderful" }
          %input{ :name => "searchbg", :type => "hidden" }
          %input{ :name => "template", :type => "hidden" }
          %input.search_button{ :type => "image", :src => "/images/searchTab.jpg", :value => "Search", :height => "35" }
    
      = render :partial => 'mainNav'
      
      = render :partial=>'banner_ads'
      .grid_12
        .grid_8
          %span{ :style => "color: #57B6DD"}
            %p
              235 Search Results Returned!
        .grid_2
          %span{ :style => "color: #BED639"}
            %p
              Sort By:

      .grid_12
     
        /  BOF LEFT SIDE
        .searchLeftSide
          #searchWindow
            #searchContent
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              = render :partial => 'business_search_example'
              
                                                                      
          .grid_4{ :style => "float:right; text-align:right; margin-top: 10px; margin-bottom: 10px;"}
            %span.scrollbar
              Reviews 1-20 of 30:
            %span.currentPage
              1
            %span.alternatePages
              %a{ :href => "#" }
                2
            %span.alternatePages
              %a{ :href => "#" }
                Next

        /
          BOF RIGHT SIDE
        .searchRightSide

          .inner{:style => "text-align:left;"}
            .sortOptions
              %ul
                %li.sortSelected
                  =link_to ("Title",:controller => :orgs,:action => :index,:search => params[:search],:sort => :title)
                  %br
                %li
                  %a{ :href => "#" }
                    video
                  %br
                %li
                  %a{ :href => "#" }
                    user ranking
                  %br
                %li
                  %a{ :href => "#" }
                    hq card deal
                  %br

          
          
          
          = render :partial => 'motion_scroll_bar'

        .clear
        .grid_12
          %img{ :src => "/images/dropShadow.jpg", :alt => ""}
      
      
