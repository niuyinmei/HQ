.grid_7{ :style => "border-bottom: 2px solid #BED538; margin: 0;"}
  %h2
    =@tab.title
%br
%br
.box_wrp
  .box_top
  .box_mid
    - form_for([@org, @highlight],:url => {:controller => :highlights,:action=>:create_bullet,:id =>@org.id}) do |f|
      .inner{ :style => "text-align: left;"}
        .disclaimerText
          heading
        %form
          = f.text_field :title,:style => "height: 20px; width: 450px;" 
        .disclaimerText
          description

          = f.text_area :content, :style => "height: 60px; width: 450px; float:left;"
        #div{ :style => "height: 40px; padding-top: 40px; width: 30px; float:left; margin-left: 5px;"}
          = submit_to_remote image_tag('/images/add.jpg',:height=>'35'),'add',:url=>{:controller=>'highlights',:action=>'create_bullet',:id => @org.id,:tab_id=>@tab.id},:update=>'searchWindow'
        .clear
  .box_bot  
%br
%br
= render :partial => 'haml/motion_scroll_bar'

#searchWindow{ :style => "width: 495px; height: 350px; float: left;"}
  #searchContent{ :style => "text-align: left; margin-left: 15px;"}
    = render :partial => 'myHQpage_admin_bulleted_lists_example',:locals => {:org => @org}
    
