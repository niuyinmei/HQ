<h1>Listing comps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Side</th>
  </tr>

<% @comps.each do |comp| %>
  <tr>
    <td><%=h comp.name %></td>
    <td><%=h comp.side %></td>
    <td><%= link_to 'Show', comp %></td>
    <td><%= link_to 'Edit', edit_comp_path(comp) %></td>
    <td><%= link_to 'Destroy', comp, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comp', new_comp_path %>